<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="重大隐患"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_fangan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="方案简述"
                android:textColor="#2196F3"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="#EFEFF4" />

            <TextView
                android:id="@+id/tv_xianchang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="现场情况"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="#EFEFF4" />

            <TextView
                android:id="@+id/tv_zeren"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="责任内容"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="#EFEFF4"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_jiejue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="解决方案"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="预案措施"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="#EFEFF4" />

            <TextView
                android:id="@+id/tv_zijin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="资金方案"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>

    <com.lingjun.colliery_android.view.NoScrollViewpager
        android:id="@+id/vp_to_be_audited"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.lingjun.colliery_android.view.NoScrollViewpager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_draft"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="#F1F8FE"
                android:gravity="center"
                android:text="草稿"
                android:textColor="#2196F3"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:background="@drawable/shape_blue_button"
                android:gravity="center"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="#F1F8FE"
                android:gravity="center"
                android:text="草稿"
                android:textColor="#2196F3"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:background="@drawable/shape_blue_button"
                android:gravity="center"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>