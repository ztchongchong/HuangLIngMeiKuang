<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.dealwith.fragment.PostponedReasonFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="处理人"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/tv_dispose_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="李晓涵"
            android:textSize="14sp"
            android:layout_margin="15dp"
            android:lines="1"
            android:gravity="right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="恢复时间"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/tv_recovery_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018-03-24"
            android:textSize="14sp"
            android:layout_margin="15dp"
            android:lines="1"
            android:gravity="right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:text="延后理由"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_reasons_postpone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:scrollbars="vertical"
        android:lineSpacingMultiplier="1.3"
        android:text="使用静抗电点风筒街头严无坡口使用静抗电点风筒街头严无坡口风筒街头严（中等）使用静抗电点风筒街头严无坡口使用静抗电点风筒街头严无坡口风筒街头严（中等）..."/>
    <!--textview.setMovementMethod(ScrollingMovementMethod.getInstance());-->

</LinearLayout>