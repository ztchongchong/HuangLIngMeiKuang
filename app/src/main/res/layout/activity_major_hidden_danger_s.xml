<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".module.dealwith.activity.RectifyTimeLimitActivity">

    <RelativeLayout
        android:id="@+id/toobar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="待审核"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back" />

    </RelativeLayout>

    <View
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="10dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@+id/toobar"/>

    <com.lingjun.colliery_android.view.MyRadioGroup
        android:id="@+id/mrg_category"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toobar">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="方案简述"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="@color/gray" />

            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="现场情况"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="@color/gray" />

            <RadioButton
                android:id="@+id/rb_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="责任内容"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="@color/gray" />

            <RadioButton
                android:id="@+id/rb_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="治理方案"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="预案措施"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="1dp"
                android:background="@color/gray" />

            <RadioButton
                android:id="@+id/rb_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="资金方案"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_margin="3dp"
                android:layout_weight="2" />

        </LinearLayout>
    </com.lingjun.colliery_android.view.MyRadioGroup>

    <View
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="3dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@+id/mrg_category"/>
    <com.lingjun.colliery_android.view.NoScrollViewpager
        android:id="@+id/vp_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mrg_category" />

    <LinearLayout
        android:id="@+id/ll_bottom_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_button"
            android:text="驳回"
            android:textColor="@color/bule"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_pass"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:background="@drawable/shape_blue_button"
            android:text="通过"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>